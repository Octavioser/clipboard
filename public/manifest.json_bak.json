{
    "manifest_version": 3,
    "name": "Clipboard Extension",
    "version": "1.0",
    "description": "A Chrome extension to copy text to the clipboard",
    "action": {
        "default_popup": "index.html"
    },
    "devtools_page": "debugger-devtools.html",
    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "background",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}